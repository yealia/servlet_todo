<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.todoteam.dao.TodoMapper">
    <select id="selectAll" resultType="org.zerock.todoteam.dto.TodoDTO">
        select * from tbl_todo order by tno desc
    </select>
    <select id="selectOne" resultType="org.zerock.todoteam.dto.TodoDTO">
        select tno, title, memo, dueDate from tbl_todo where tno=#{tno}
    </select>

    <insert id="insert">
        insert into tbl_todo(title,memo,dueDate) values (#{title}, #{memo}, #{dueDate})
    </insert>

    <delete id="delete">
        delete from tbl_todo where tno = #{tno}
    </delete>

    <update id="update">
        update tbl_todo set title=#{title}, memo=#{memo}, dueDate=#{dueDate},modDate=now() where tno=#{tno}
    </update>
</mapper>